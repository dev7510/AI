def tower_of_hanoi(n, source, destination, auxiliary):
    """
    Prints the step-by-step moves required to solve Tower of Hanoi.

    Parameters:
    n (int): Number of disks
    source (str): The name of the source rod
    destination (str): The name of the destination rod
    auxiliary (str): The name of the auxiliary rod
    """
    if n == 1:
        print(f"Move disk 1 from {source} → {destination}")
        return
    # Move top n-1 disks from source to auxiliary
    tower_of_hanoi(n - 1, source, auxiliary, destination)
    
    # Move the largest disk from source to destination
    print(f"Move disk {n} from {source} → {destination}")
    
    # Move the n-1 disks from auxiliary to destination
    tower_of_hanoi(n - 1, auxiliary, destination, source)

# Example usage
n = 3
tower_of_hanoi(n, 'A', 'C', 'B')
